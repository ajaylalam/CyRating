<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/classes_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ClassesPageActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cy_logo_05" />

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >



        <TextView
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textview"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:text="Profile"
            android:textColor="@color/white" />

    </LinearLayout>


    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_below="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="Iowa State Course Rating"
        android:textColor="#F1BE48"
        android:textSize="25sp"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/search_bar"
        android:orientation="horizontal"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="Search for a Professor or Class:"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Search" />

    </LinearLayout>

    <TextView
        android:id="@+id/courses_header"
        android:layout_below="@+id/search_bar"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Course Ratings and Feedback:"
        android:textSize="20sp"
        android:textColor="#F1BE48"/>


    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/courses_header"
        android:layout_marginBottom="50dp">

        <GridLayout
            android:id="@+id/classDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:text="Class 1" />

        </GridLayout>
    </ScrollView>


    <!-- Footer with buttons -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/classes_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Classes" />

        <TextView
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Home" />

        <TextView
            android:id="@+id/groups_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Groups" />

        <TextView
            android:id="@+id/clubs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Clubs" />

        <TextView
            android:id="@+id/create_schedule"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Mock  Schedule" />

    </LinearLayout>

</RelativeLayout>