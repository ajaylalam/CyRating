<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/app_background"
    >

    <!-- Your existing main content -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/finish_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/finish_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_textview"
                android:layout_margin="10dp"
                android:layout_gravity="end"
                android:text="Finish"
                android:textColor="@color/white" />

        </LinearLayout>
        <TextView
            android:id="@+id/header"
            android:layout_below="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Iowa State Course Rating"
            android:textColor="#F1BE48"
            android:textSize="25sp"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/search_bar"
            android:orientation="horizontal"
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/header"
                android:background="@drawable/edittext_bg"
                android:hint="Search for a Professor or Class:"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />


            <TextView
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="Search" />

        </LinearLayout>
        <TextView
            android:text="Please select the classes you are currently enrolled in."
            android:textColor="#C8102E"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/courses_header"
            android:layout_below="@+id/selectedDisplay"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="All Classes"
            android:textSize="20sp"
            android:textColor="#F1BE48"/>

        <ScrollView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginBottom="100dp">

            <GridLayout
                android:id="@+id/classDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_textview"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:text="Class 1" />

            </GridLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/selected_classes_panel"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_top_sheet"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:elevation="4dp"
        android:translationY="240dp">

        <!-- Optional grab handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="#DDD"
            android:alpha="0.6"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/selected_classes_title"
            android:text="Selected Classes"
            android:textColor="#F1BE48"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/selected_classes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp" />
        </ScrollView>
    </LinearLayout>
</FrameLayout>