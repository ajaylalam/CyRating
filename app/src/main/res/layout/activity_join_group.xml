<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <!-- Home Button -->
        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Home"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:backgroundTint="#C8102E"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp" />

        <!-- ISU Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/cy_logo_05"
            android:background="@drawable/white"
            android:scaleType="centerCrop"
            android:layout_marginTop="-30dp"
            android:contentDescription="Group Logo" />

        <!-- Title -->
        <TextView
            android:id="@+id/textViewGroupsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#C8102E"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="8dp" />

        <!-- Group List Title -->
        <TextView
            android:id="@+id/textViewJoinedGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Groups"
            android:textColor="#C8102E"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <!-- Scrollable List of Groups -->
        <LinearLayout
            android:id="@+id/groupsListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="60dp" />

    </LinearLayout>
</ScrollView>