<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="16dp"
    tools:context=".ProfessorEditClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/editClassTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Class"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Course Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name" />

        <EditText
            android:id="@+id/inputCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:hint="e.g. Intro to Software Engineering"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Course Code -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Code" />

        <EditText
            android:id="@+id/inputCourseId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:hint="e.g. SE 319"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description" />

        <EditText
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:gravity="top|start"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:hint="Short description of the course..."
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textMultiLine" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnSaveClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:backgroundTint="@color/black" />

        </LinearLayout>

        <GridLayout
            android:id="@+id/commentsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>