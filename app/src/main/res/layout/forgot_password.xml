<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".ForgotPassword">



    <!-- White login card -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/isuLogo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="Iowa State University name"
            android:scaleType="fitXY"
            android:src="@drawable/isu_name"
            android:adjustViewBounds="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="175dp"
        android:alpha="0.9"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">


        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Forgot Password"
            android:textColor="#C8102E"
            android:textSize="23sp"
            android:textStyle="bold"

            />

        <!-- Username -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:hint="Iowa State Net-ID"
            android:padding="10dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/edit_text"
            android:hint="Password"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/edit_text"
            android:hint="Re-Enter Password"
            android:padding="10dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/buttonForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#C8102E"
            android:text="Reset Password"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#C8102E"
            android:text="Signup"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#C8102E"
            android:text="Back to Login"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ImageView
        android:layout_width="306dp"
        android:layout_height="189dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="80dp"
        android:alpha="1"
        android:contentDescription="Cyclone Logo"
        android:src="@drawable/cy_logo_03" />

</RelativeLayout>
