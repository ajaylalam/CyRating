<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enrolled_clubs_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".EnrolledClubsActivity">

    <!-- background image (light, like other screens) -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cy_logo_05"
        android:alpha="0.12" />

    <!-- BACK (top-left) -->
    <TextView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â† Back"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:background="@drawable/rounded_textview"
        android:layout_margin="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:focusable="true" />

    <!-- HOME (top-right) -->
    <TextView
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_textview"
        android:layout_margin="20dp"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:focusable="true" />

    <!-- BIG HEADER -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_btn"
        android:layout_marginTop="-11dp"
        android:text="Iowa State Clubs"
        android:textColor="#F1BE48"
        android:textSize="35sp"
        android:textAlignment="center" />

    <!-- RED BAR: Refresh -->
    <LinearLayout
        android:id="@+id/top_controls"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tvTitle"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/btnRefreshClubs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Refresh"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- subtitle -->
    <TextView
        android:id="@+id/tvHeaderInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_controls"
        android:text="Clubs you are enrolled in"
        android:textColor="#C8102E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <!-- message when there are no enrolled clubs -->
    <TextView
        android:id="@+id/tvEmptyClubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeaderInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="You haven't enrolled in any clubs yet."
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/rounded_textview"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone" />

    <!-- loading spinner -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmptyClubs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- list of enrolled clubs -->
    <ListView
        android:id="@+id/listEnrolledClubs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/progressBar"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:divider="@color/gray"
        android:dividerHeight="1dp" />

</RelativeLayout>
