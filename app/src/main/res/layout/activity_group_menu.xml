<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/app_background"
    >

    <!-- ===== Small red Back button (top-left corner) ===== -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:text="Back"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#C8102E"
        android:layout_gravity="start"
        android:elevation="4dp" />

    <!-- ===== Cyclone Logo ===== -->

    <!-- ===== Page Title ===== -->
    <ImageView
        android:id="@+id/cycloneLogoMenu"
        android:layout_width="315dp"
        android:layout_height="218dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:contentDescription="Cyclone Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/cy_logo_05" />

    <!-- ===== Buttons Section ===== -->

    <TextView
        android:id="@+id/menuTitle"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Group Info"
        android:textColor="#C8102E"
        android:textSize="23sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="197dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Create Group Button -->
        <Button
            android:id="@+id/buttonGoToCreateGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#C8102E"
            android:elevation="4dp"
            android:text="Create Group"
            android:textColor="@android:color/white" />

        <!-- Join Group Button -->
        <Button
            android:id="@+id/buttonGoToJoinGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C8102E"
            android:elevation="4dp"
            android:text="Join Group"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
