<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_assignment_card"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Top row: course chip + due date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Course ID chip -->
        <TextView
            android:id="@+id/assignmentClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_course_chip"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="COM S 309"
            android:textAllCaps="true"
            android:textColor="@color/isu_surface_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Due date -->
        <TextView
            android:id="@+id/assignmentDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due: 2025-12-10"
            android:textSize="12sp"
            android:textColor="@color/isu_gold" />
    </LinearLayout>

    <!-- Assignment name -->
    <TextView
        android:id="@+id/assignmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Assignment Name"
        android:textColor="@color/isu_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2" />

    <!-- Description -->
    <TextView
        android:id="@+id/assignmentDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Short assignment description goes here."
        android:textColor="@color/isu_text_secondary"
        android:textSize="13sp"
        android:maxLines="3" />

    <!-- Bottom row: submit button (aligned right) -->
    <Button
        android:id="@+id/submitAssignmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:text="Submit"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:backgroundTint="@color/isu_red"
        android:textColor="@color/isu_text_primary" />

</LinearLayout>