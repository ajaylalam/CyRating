<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_schedule_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".CreateScheduleActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cy_logo_05" />

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textview"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:text="Profile"
            android:textColor="@color/white" />

    </LinearLayout>
    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_below="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="Iowa State Course Rating"
        android:textColor="#F1BE48"
        android:textSize="25sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/schedules_header"
        android:layout_below="@+id/header"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Mock Schedules"
        android:textSize="20sp"
        android:textColor="#F1BE48"/>

    <TextView
        android:id="@+id/description"
        android:layout_below="@id/schedules_header"
        android:layout_marginHorizontal="75dp"
        android:layout_marginBottom="5dp"
        android:textColor="#C8102E"
        android:textAlignment="center"
        android:text="Click here to view a previously saved schedule, or click below to create a new Mock Schedule. "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/buffer"
        android:layout_below="@id/description"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="#F1BE48" />

    <GridLayout
        android:id="@+id/schedulesDisplay"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:layout_below="@+id/buffer">

<!--        <LinearLayout-->
<!--            android:orientation="vertical"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginHorizontal="100dp"-->
<!--            android:layout_marginBottom="10dp">-->

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Fall 2024"-->
<!--                android:textAlignment="center"-->
<!--                android:textSize="18sp"-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="#C8102E"-->
<!--                android:gravity="center"/>-->

<!--            <View-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="2dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="#C8102E" />-->
<!--        </LinearLayout>-->

    </GridLayout>

    <LinearLayout
        android:layout_below="@id/schedulesDisplay"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/create_schedule_btn"
            android:text="Create Mock Schedule"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_textview"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!-- Footer with buttons -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/classes_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Classes" />

        <TextView
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Home" />

        <TextView
            android:id="@+id/groups_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Groups" />

        <TextView
            android:id="@+id/clubs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Clubs" />

        <TextView
            android:id="@+id/create_schedule"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Mock  Schedule" />

    </LinearLayout>
</RelativeLayout>