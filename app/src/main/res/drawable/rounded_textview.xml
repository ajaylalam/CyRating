<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Lighter red background -->
    <solid android:color="#C8102E" /> <!-- Material Red 400 -->

    <!-- Gold border -->
    <stroke
        android:width="2dp"
        android:color="#F1BE48" />

    <!-- Padding -->
    <padding
        android:left="10dp"
        android:top="6dp"
        android:right="10dp"
        android:bottom="6dp" />

</shape>