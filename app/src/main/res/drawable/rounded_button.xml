<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A60D26"/> <!-- darker red when pressed -->
            <stroke android:width="1dp" android:color="#F1BE48"/> <!-- gold border -->
            <corners android:radius="0dp"/> <!-- sharp corners -->
        </shape>
    </item>

    <!-- Default (normal) state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C8102E"/> <!-- normal red -->
            <stroke android:width="1dp" android:color="#F1BE48"/> <!-- gold border -->
            <corners android:radius="0dp"/> <!-- sharp corners -->
        </shape>
    </item>

</selector>